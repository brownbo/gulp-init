<!DOCTYPE html>
html(lang="ja-JP")
  head(
    prefix : "og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#"
  )

    meta(charset="utf-8")
    meta(
      http-equiv = "X-UA-Compatible"
      content="IE=edge,chrome=1"
    )
    meta(
      name='viewport'
      content="width=device-width"
    )
    block meta
    -
      var base_path   = './';
      var page_class = [];
      var headerType = '1'
    -
    block page_option
    -
      var path_image  = base_path + 'image/';
      var path_js     = base_path + 'javascript/';
      var path_icon   = path_image + 'icon/';
      var path_dammy  = path_image + 'dummy/';
    -
    <meta name="format-detection" content="telephone=no; email=no"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="msapplication-tap-highlight" content="no">
    <meta name="renderer" content="webkit">

    //link(
    //  rel="stylesheet"
    //  href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.1.0/css/swiper.min.css"
    //)
    link(
      rel="stylesheet"
      href=base_path + "vendor/swiper.min.css"
    )
    link(
      rel="stylesheet"
      href=base_path + "stylesheet/application.css"
      type="text/css"
    )
    link(
      rel="icon"
      type="image/ico"
      href=base_path + 'image/favicon.ico'
    )
    <link rel="apple-touch-icon" href="../image/logo-icon.png">
  body
    div(
      class=page_class
    )
      //- mixin
      include /mixin/_item_b.pug
      include /mixin/_list_select.pug
      include /mixin/_breadcrumb.pug
      include /mixin/_modal.pug
      include /mixin/_modal_shop.pug

      include /includes/_header.pug
      block content
      include /includes/_footerl_navi.pug
      include /includes/_footer.pug

      + modal('x_modal_login','ログイン・新規登録', '', false)
      + modal('modal_normal x_modal_normal','', '削除してもよろしいでしょうか？', true)
    include /includes/_js.pug