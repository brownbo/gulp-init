extends ../layouts/_default.pug
block meta
  - var page_name = "ランキング"
  title
    =page_name
  meta(
  name='keywords'
  content='keywords'
  )
  meta(
  name='description'
  content='description'
  )
  meta(
  name='language'
  content='en'
  )

block page_option
  - page_class.push('page_a my_page page_rank')
  - base_path = '../'

block content
  -
    data.periodType =[
      {value: 'TOTAL', name: 'すべて'},
      {value: 'THIS_WEEK', name: '～3,000円'},
      {value: 'LAST_SEVEN_DAYS', name: '～9,999円'},
      {value: 'THIS_MONTH', name: '10,000円以上'},
      {value: 'LAST_30_DAYS', name: '10,000円以上'}
    ]

  .page_content.x_page_content
    .x_scroll_content.scroll_content
      -
      +breadcrumb([
        {
          name: 'Top',
          link: 'top/top.html'
        },
        {
          name: 'マイページ ',
          link: 'my_page/my_center.html'
        },
        {
          name: page_name,
          link: ''
        }
      ])
      -
      .wrapper.x_news_list
        p.my_list_num 全て ：
          span.x_total_count 123
          | 件
        .my_list_title
          p
            = page_name
          .my_btn_wrap
            .edit_wrap
              +list_select([{value: '1', name: '新着順'}, {value: '2', name: 'いいね順いいね順いいね順いいね順いいね順'}])
              +list_select([{value: '1', name: '新着順'}, {value: '2', name: 'いいね順いいね順いいね順いいね順いいね順'}])

        .content_body
          .news_list.x_render_parent


